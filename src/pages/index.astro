---
import Hero from "../components/home/hero.astro";
import Sectionbenef from "../components/home/benefsection.astro";
import InfoSection from "../components/home/infosec.astro";
import ReviewSection from "../components/home/review.astro";
import MainLayout from "../layout/main-layout.astro";
---
<MainLayout>
    <Hero
      title="La forma más fácil de gestionar tus medicamentos"
      description="Asegúrate de tener siempre los medicamentos que necesitas en casa."
      imgSrc="/images/subject-womanhealt.svg"
      imgAlt="womanhealt.svg"
    />
    <Sectionbenef />

    <InfoSection
      id="apoyanos"
      icoButtton="/icons/handdonate.svg"
      textButton="Donar"
      hrfButton=""
      title="Apóyanos para mejorar Medichest"
      description="Medichest es gratuita pero su mejora y mantenimiento dependen de donaciones voluntarias, tu apoyo permite añadir funciones útiles, mantener la app accesible para todos y garantizar soporte continuo, como agradecimiento recibirás una insignia de colaborador y acceso anticipado a funciones nuevas."
      imgSrc="/images/alzhaimer.svg"
      imgAlt="womanhealt.svg"
    />

    <ReviewSection />

    <InfoSection
      icoButtton="/public/icons/healtbox.svg"
      textButton="Descargar"
      hrfButton=""
      title="Medichest, tu gestor de medicamentos"
      description="Organiza tu inventario, mantente informado y asegura el bienestar de tu familia. Empieza a usar Medichest hoy."
      imgSrc="/images/appview.png"
      imgAlt="womanhealt.svg"
    />
</MainLayout>
